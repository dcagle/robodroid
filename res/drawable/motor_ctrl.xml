<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When pressed, use "pressed" icon -->
    <item android:drawable="@drawable/motor_ctrl_pressed" 
          android:state_pressed="true" />
    <!-- When active, but not pressed, use "on" icon -->
    <item android:drawable="@drawable/motor_ctrl_on"
          android:state_selected="true" />
    <!-- When not active and not pressed, use "off" icon -->
    <item android:drawable="@drawable/motor_ctrl_off" />
</selector>
